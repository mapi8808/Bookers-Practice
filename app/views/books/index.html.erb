<h2>Books</h2>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    
    <tbody>
        <% @books.each do |b| %>
            <tr>
                <td><%= b.title %></td>
                <td><%= b.body %></td>
                <td><%= link_to "Show" book_path(book.id), class:"show_#{book.id}" %></td>
                <td><%= link_to "Edit" edit_book_path(book.id), class:"edit_#{book.id}" %></td>
                <td><%= link_to "Destroy" book_path(book.id), method: :delete, data {confilm: "Are you sure?" }, class:"destroy_#{book.id}"  %></td>
            </tr>
        <% end %>
    </tbody>
</table>


<h2>New Books</h2>
<%= form_with model:@book, local: true do |f| %>
    <h4>Title</h4>
        <%= f.text_field :title %>
    <h4>Body</h4>
        <%= f.text_area :body %>
    <div>
        <%= f.submit "Create Book" %>
    </div>
<% end %>
