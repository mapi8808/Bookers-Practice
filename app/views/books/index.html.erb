<h2>Books</h2>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    
    <tbody>
        <% @books.each do |b| %>
    <span><%= b.title %></span>
    <span><%= b.body %></span>
        <% end %>
    </tbody>
</table>


<h2>New Books</h2>
<%= form_with model:@book, local: true do |f| %>
    <h4>Title</h4>
        <%= f.text_field :title %>
    <h4>Body</h4>
        <%= f.text_area :body %>
    <div>
        <%= f.submit "Create Book" %>
    </div>
<% end %>
